{
	"name": "ardrive-core-js",
	"version": "1.0.0",
	"description": "ArDrive Core contains the essential back end application features to support the ArDrive CLI and Desktop apps, such as file management, Permaweb upload/download, wallet management and other common functions.",
	"main": "./lib/index.js",
	"types": "./lib/index.d.ts",
	"dependencies": {
		"arweave": "^1.10.11",
		"arweave-bundles": "^1.0.3",
		"axios": "^0.21.1",
		"futoin-hkdf": "^1.3.3",
		"jwk-to-pem": "^2.0.4",
		"node-fetch": "^2.6.1",
		"smartweave": "0.4.27",
		"typescript": "^4.2.3",
		"utf8": "^3.0.0",
		"uuid": "^8.3.2"
	},
	"devDependencies": {
		"@types/chai": "^4.2.15",
		"@types/jwk-to-pem": "^2.0.0",
		"@types/mocha": "^8.2.1",
		"@types/node": "^14.14.32",
		"@types/node-fetch": "^2.5.8",
		"@types/utf8": "^2.1.6",
		"@types/uuid": "^8.3.0",
		"@typescript-eslint/eslint-plugin": "^4.18.0",
		"@typescript-eslint/parser": "^4.18.0",
		"chai": "^4.3.3",
		"eslint": "^7.23.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-prettier": "latest",
		"husky": "=4",
		"lint-staged": ">=10",
		"mocha": "^8.3.1",
		"prettier": "^2.2.1",
		"ts-node": "^9.1.1"
	},
	"scripts": {
		"format": "prettier --write \"src/**/*.ts\"",
		"lint": "eslint . --ext .ts",
		"lintfix": "eslint . --ext .ts --fix",
		"test": "mocha -r ts-node/register tests/**/*.test.ts",
		"build": "tsc",
		"prepare": "yarn run build",
		"preversion": "yarn run lint",
		"version": "yarn run format && git add -A src",
		"postversion": "git push && git push --tags"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"license": "AGPL-3.0-or-later",
	"author": {
		"name": "Permanent Data Solutions Inc",
		"email": "info@ardrive.io",
		"website": "https://ardrive.io"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ardriveapp/ardrive-core-js.git"
	},
	"files": [
		"lib/**/*"
	],
	"lint-staged": {
		"*.ts": [
			"prettier --write",
			"eslint --cache --fix"
		]
	}
}
